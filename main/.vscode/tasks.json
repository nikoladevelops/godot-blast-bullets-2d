{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build GDExtension For Debugging",
            "type": "shell",
            "command": "scons",
            "args": ["target=template_debug", "debug_symbols=yes"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}